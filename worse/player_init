#include "../player.h"
#include "../inc/ft_printf/ft_printf.h"
#include "inc/get_next_line.h"

t_player player_init(void)
{
    t_player player;
    player.health = 10;
    player.strength = 2;
    player.magic = 0;
    player.turn = 0;

    ft_printf("Hello there wanderer, what is you name?\n");
    usleep(1000);
    ft_printf("Your name:");
    player.name = get_next_line(0);
    if (!player.name)
        ft_printf("you havet given a name little twat!\n");
    ftprintf("hello there %s, i hope your doing well.\n");
    return (player);
}